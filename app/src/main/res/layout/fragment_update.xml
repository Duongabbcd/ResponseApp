<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.update.UpdateFragment">

        <EditText
            android:layout_marginTop="100dp"
            android:inputType="textPersonName"
            android:id="@+id/update_edtName"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="Subject Name"
            android:backgroundTint="@color/custome_green"
            app:layout_constraintStart_toStartOf="parent"
            android:ems="10"/>

        <Button
            android:text="Pick Date"
            android:backgroundTint="#2196F3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/update_edtName"
            app:layout_constraintEnd_toStartOf="@id/update_edtStartDate"
            android:layout_marginTop="18dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/update_pickDate"/>

        <TextView
            android:background="@drawable/cardview_background"
            android:textSize="25sp"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/update_edtStartDate"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/update_edtName"
            android:ems="8"
            />

        <Button
            android:text="Start Time"
            android:backgroundTint="#2196F3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/update_pickDate"
            app:layout_constraintEnd_toStartOf="@id/update_edtStartTime"
            android:layout_marginTop="18dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/update_pickStartTime"/>

        <TextView
            android:background="@drawable/cardview_background"
            android:layout_marginTop="20dp"
            android:id="@+id/update_edtStartTime"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/update_pickDate"
            android:textSize="25sp"
            android:padding="5dp"
            android:ems="8" />

        <Button
            android:text="End Time"
            android:backgroundTint="#2196F3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/update_pickStartTime"
            app:layout_constraintEnd_toStartOf="@id/update_edtEndTime"
            android:layout_marginTop="18dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/update_pickEndTime"/>

        <TextView
            android:background="@drawable/cardview_background"
            android:textSize="25sp"
            android:padding="5dp"
            android:id="@+id/update_edtEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:ems="8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/update_pickStartTime" />

        <Button
            android:id="@+id/btnUpdate"
            android:text="Update"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/teal_700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/update_edtEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>